# ==========================================
# STORAGE CONFIGURATION
# ==========================================

# FOR INTERNAL STORAGE (Default - Zero Configuration)
# When ENABLE_S3=false (or not set), Palmr uses built-in MinIO storage
ENABLE_S3=false 
DISABLE_FILESYSTEM_ENCRYPTION=true
# ENCRYPTION_KEY=change-this-key-in-production-min-32-chars # Required only if encryption is enabled (DISABLE_FILESYSTEM_ENCRYPTION=false)
DATABASE_URL="file:./palmr.db"

# STORAGE_URL - Required ONLY for internal storage (ENABLE_S3=false)
# This is the publicly accessible URL for the internal MinIO storage server
# Examples: 
#   - https://storage.yourdomain.com:9379
#   - http://192.168.1.100:9379
# STORAGE_URL=https://storage.yourdomain.com:9379

# FOR EXTERNAL S3 STORAGE (AWS, Backblaze B2, etc.)
# When ENABLE_S3=true, Palmr uses external S3-compatible storage
# DO NOT set STORAGE_URL when using external S3
# ENABLE_S3=true 
# S3_ENDPOINT=s3.us-west-001.backblazeb2.com # For Backblaze B2
# S3_PORT= # Optional, only if using non-standard port
# S3_USE_SSL=true
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_REGION=us-west-001
# S3_BUCKET_NAME=your-bucket-name
# S3_FORCE_PATH_STYLE=false # Set to true for MinIO-compatible services
# S3_REJECT_UNAUTHORIZED=true # Set to false to disable strict SSL certificate validation for self-signed certificates (optional, defaults to true)
# S3_DISABLE_CHECKSUMS=false # Set to true to disable automatic checksums for S3-compatible services that don't support them (e.g., Cloudflare R2) (optional, defaults to false)
# PRESIGNED_URL_EXPIRATION=3600 # Duration in seconds for presigned URL expiration (optional, defaults to 3600 seconds / 1 hour)
